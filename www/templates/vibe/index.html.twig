{% extends 'base.html.twig' %}

{% block title %}Accueil - Vibes
{% endblock %}

{% block body %}
	<style>
		.vibe-container {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
			gap: 2rem;
			margin: 2rem auto;
			padding: 1rem;
			max-width: 1000px;
		}

		.vibe-card {
			background: linear-gradient(135deg, #1db954, #191414);
			color: white;
			padding: 1.5rem;
			border-radius: 1rem;
			box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
			transition: transform 0.2s ease;
		}

		.vibe-card:hover {
			transform: scale(1.05);
		}

		.vibe-title {
			font-size: 1.5rem;
			font-weight: bold;
			margin-bottom: 0.5rem;
		}

		.vibe-info {
			font-size: 1rem;
			margin-top: 0.25rem;
		}
	</style>

	<h1 style="text-align: center; margin-top: 2rem;">Vibes disponibles ðŸŒ€</h1>

	<div class="vibe-container">
		{% for vibe in vibes %}
			<div class="vibe-card">
				<div class="vibe-title">{{ vibe.label }}</div>
				<div class="vibe-info">Ã‰nergie :
					{{ vibe.energy }}</div>
				<div class="vibe-info">Stress :
					{{ vibe.stress }}</div>
				<div class="vibe-info">Motivation :
					{{ vibe.motivation }}</div>
			</div>
		{% else %}
			<p>Aucune vibe disponible pour le moment.</p>
		{% endfor %}
	</div>
{% endblock %}
